{
  "compilerOptions": {

    "target": "es5",
    "module": "commonjs",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "allowJs": true,
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
     },

    "typeRoots": [
     "./src/@types/"
    ],
   "esModuleInterop": true,
   "experimentalDecorators": true,
   "emitDecoratorMetadata": true,
   "skipLibCheck": true,
   "forceConsistentCasingInFileNames": true,
   "removeComments": true
  },
 "include": [
    "src/**/*"
  ]
}
